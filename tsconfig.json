{
  "compilerOptions": {
    "target": "ES2018",                     /* Specify ECMAScript target version */
    "module": "commonjs",                   /* Specify module code generation */
    "strict": true,                         /* Enable all strict type-checking options */
    "esModuleInterop": true,                /* Enable interoperability between CommonJS and ES Modules */
    "outDir": "./dist",                     /* Output directory for compiled JS files */
    "rootDir": "./src",                     /* Directory containing TypeScript source files */
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"                          /* Specify TypeScript files to include */
  ],
  "exclude": [
    "node_modules",                         /* Specify files to exclude */
    "**/*.spec.ts"                          /* Test files */
  ]
}
